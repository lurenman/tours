<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/low_dark"
        />
 <LinearLayout
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="horizontal">
     <LinearLayout
         android:id="@+id/tab_bar1"
         android:orientation="vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         >
         <ImageView
             android:id="@+id/market_bottom_home"
             android:layout_width="30dp"
             android:layout_height="0dp"
             android:layout_weight="2"
             android:layout_gravity="center"
             android:layout_alignParentTop="true"
             android:background="@drawable/market_bottom_home_selector"
             />
         <TextView
             android:layout_weight="1"
       style="@style/market_bottombar_item1"
       android:textColor="@color/black"
       android:text="首页"
       />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/tab_bar2"
         android:orientation="vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         >
         <ImageView
             android:id="@+id/market_bottom_destination"
             android:layout_width="30dp"
             android:layout_height="0dp"
             android:layout_weight="2"
             android:layout_gravity="center"
             android:layout_alignParentTop="true"
             android:background="@drawable/market_bottom_destination_selector"
             />
         <TextView
             style="@style/market_bottombar_item1"
             android:layout_weight="1"
             android:textColor="@color/black"
             android:text="目的地"
             />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/tab_bar3"
         android:orientation="vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         >
         <ImageView
             android:id="@+id/market_bottom_finder"
             android:layout_width="30dp"
             android:layout_height="0dp"
             android:layout_weight="2"
             android:layout_gravity="center"
             android:layout_alignParentTop="true"
             android:background="@drawable/market_bottom_finder_selector"
             />
         <TextView
             style="@style/market_bottombar_item1"
             android:layout_weight="1"
             android:textColor="@color/black"
             android:text="发现"
             />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/tab_bar4"
         android:orientation="vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         >
         <ImageView
             android:id="@+id/market_bottom_trip"
             android:layout_width="30dp"
             android:layout_height="0dp"
             android:layout_weight="2"
             android:layout_gravity="center"
             android:layout_alignParentTop="true"
             android:background="@drawable/market_bottom_trip_selector"
             />
         <TextView
             style="@style/market_bottombar_item1"
             android:layout_weight="1"
             android:textColor="@color/black"
             android:text="行程娱乐"
             />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/tab_bar5"
         android:orientation="vertical"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         >
         <ImageView
             android:id="@+id/market_bottom_my"
             android:layout_width="30dp"
             android:layout_height="0dp"
             android:layout_weight="2"
             android:layout_gravity="center"
             android:layout_alignParentTop="true"
             android:background="@drawable/market_bottom_my_selector"
             />
         <TextView
             style="@style/market_bottombar_item1"
             android:layout_weight="1"
             android:textColor="@color/black"
             android:text="我的"
             />
     </LinearLayout>
 </LinearLayout>
</LinearLayout>